[
  {
    "id": "performance_guarantees",
    "name": "Performance Guarantees",
    "category": "Performance Guarantees", 
    "severity": "high",
    "regulation": "SEC Rule 10b-5, Investment Advisers Act Section 206",
    "keywords": ["guaranteed", "guarantee", "never lose", "always profit", "can't lose", "risk-free return", "guaranteed profit"],
    "patterns": [
      "\\b(?:guaranteed?|guarantee)\\b.*\\b(?:\\d+%|percent|returns?)\\b",
      "\\b(?:never|won't|can't)\\s+lose\\b",
      "\\b(?:always|guaranteed?)\\s+(?:profit|returns?|gains?)\\b"
    ],
    "description": "Detects explicit or implicit performance guarantees prohibited under securities regulations."
  },
  {
    "id": "unsuitable_advice", 
